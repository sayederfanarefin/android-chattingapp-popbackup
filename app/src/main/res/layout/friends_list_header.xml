<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:text="@string/friends_self_profile"
            android:textColor="@color/colorPrimary"
            android:textSize="7pt" />


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/message_container_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:id="@+id/self_row">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/message_profile_image_without_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/profilePictureBorder"
                    android:src="@mipmap/user" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/friend_list_without_button_item_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:maxLines="1"
                            android:text="User Name"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/friend_list_without_button_item_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"

                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:maxLines="1"
                        android:text="Feeling Happy"
                        android:textColor="@color/smallTextColor" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="2">
                    <TextView
                        android:id="@+id/friend_list_without_button_item_user_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:gravity="center_horizontal"
                        android:text="friend_list_without_button_item_user_id"
                        android:layout_marginRight="8dp"
                        android:textSize="5pt"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorAccentPrimary"

                        />


                </RelativeLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/friends_friend_list"
            android:textColor="@color/colorPrimary"
            android:textSize="7pt" />
    </LinearLayout>
</LinearLayout>